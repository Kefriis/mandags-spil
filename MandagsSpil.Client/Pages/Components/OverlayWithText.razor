<MudOverlay Visible="@Visible" DarkBackground="@DarkBackground" ZIndex="9999">
    <div class="d-flex flex-column align-center justify-center mud-width-full mud-height-full">
        <MudProgressCircular Indeterminate="true" Color="Color.Primary" Size="Size.Large" Class="mb-4" />
        @if (Text is not null)
        {
            <MudText Typo="Typo.h6" Class="mud-text-white">@Text</MudText> 
        }
    </div>
</MudOverlay>

@code {
    [Parameter] public string? Text { get; set; }
    [Parameter] public bool DarkBackground { get; set; } = true;
    [Parameter] public bool Visible { get; set; } = false;
}